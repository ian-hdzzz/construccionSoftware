<section class="section">
  <div class="container">
    <h1 class="title is-2 has-text-primary">Lista de usuarios</h1>

    <div class="box">
      <div class="content">
        <p>Aquí se mostrarían los usuarios registrados.</p>

        <table class="table is-striped is-fullwidth">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Email</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
              <tr>
                <td>{{@index}}</td> <!-- Muestra el índice del arreglo -->
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>
                  <a href="/users/{{@index}}" class="button is-small is-info">
                    <span class="icon is-small">
                      <i class="fas fa-eye"></i>
                    </span>
                  </a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <div class="buttons">
      <a href="/users/register" class="button is-primary">
        <span class="icon">
          <i class="fas fa-user-plus"></i>
        </span>
        <span>Registrar nuevo usuario</span>
      </a>
      <a href="/" class="button is-link is-light">
        <span class="icon">
          <i class="fas fa-home"></i>
        </span>
        <span>Volver al inicio</span>
      </a>
    </div>
  </div>
</section>