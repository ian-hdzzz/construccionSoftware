
    <div class="container">
        <h1 class="title is-3 has-text-centered">Formulario de Subida de Archivo</h1>

        <form  action="archivo" method="POST" enctype="multipart/form-data" class="box">
           <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="field">
                <label class="label">Selecciona un archivo:</label>
                <div class="control">
                    <input  type="file" name="archivo" class="input">
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <input  type="submit" name="enviar" value="Subir" class="button is-primary">
                </div>
            </div>
        </form>
    </div>
